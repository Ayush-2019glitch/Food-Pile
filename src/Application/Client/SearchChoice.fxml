         <font>
            <Font name="Book Antiqua" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="idSearchTextField" layoutX="26.0" layoutY="70.0" promptText="Enter ID here" />
      <TextField fx:id="nameSearchTextField" layoutX="219.0" layoutY="70.0" promptText="Enter Name here" />
      <Label fx:id="functionLabel" layoutX="132.0" layoutY="6.0" prefHeight="17.0" prefWidth="136.0">
         <font>
            <Font name="Algerian" size="13.0" />
         </font>
      </Label>
   </children>
